// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Team {
  id                  String     @default(cuid()) @id
  title               String
  first_name          String?
  last_name           String?
  number_of_stuents   String?
}

model Student {
  id            String       @default(cuid()) @id
  first_name    String?
  last_name     String?
  phone_number  String?
  course        String?
  age           String?
  gender        String?
  email         String?   @unique
  createdAt     DateTime  @default(now()) @map(first_name: "created_at")
  updatedAt     DateTime  @updatedAt @map(first_name: "updated_at")
  all_student   AllStudents[]
  @@map(first_name: "Students")
}